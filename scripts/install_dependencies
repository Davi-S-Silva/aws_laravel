#!/bin/bash

# export INSTALLER="yum"
export INSTALLER="apt"
export INSTALLER_GET="apt-get"
# export APACHE="httpd"
export APACHE="apache2"

sudo $INSTALLER update
# sudo apt dist-upgrade
sudo $INSTALLER install -y $APACHE
# sudo $INSTALLER install software-properties-common
# sudo add-apt-repository ppa:ondrej/php
sudo $INSTALLER_GET install -y php8.0
sudo $INSTALLER_GET install -y php-curl php-cli php-mbstring git unzip php8.0-mysql php8.0-dom php8.0-xml php8.0-xmlwriter phpunit php-mbstring php-xml
sudo $INSTALLER_GET install libapache2-mod-php8.0
sudo a2enmod rewrite
sudo /etc/init.d/apache2 restart
# sudo service httpd restart

# install composer
EXPECTED_CHECKSUM="$(php -r 'copy("https://composer.github.io/installer.sig", "php://stdout");')"
php -r "copy('https://getcomposer.org/installer', 'composer-setup.php');"
ACTUAL_CHECKSUM="$(php -r "echo hash_file('sha384', 'composer-setup.php');")"

if [ "$EXPECTED_CHECKSUM" != "$ACTUAL_CHECKSUM" ]
then
    >&2 echo 'ERROR: Invalid installer checksum'
    rm composer-setup.php
    exit 1
fi

php composer-setup.php --quiet
RESULT=$?
rm composer-setup.php
sudo mv composer.phar /usr/local/bin/composer
exit $RESULT


# php -r "copy('https://getcomposer.org/installer', 'composer-setup.php');"

